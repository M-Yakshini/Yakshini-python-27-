class Solution:
    def splitArray(self, a, m):
        l,r=max(a),sum(a)
        while l<r:
            mid=(l+r)//2
            c=1; s=0
            for x in a:
                if s+x>mid:
                    c+=1; s=0
                s+=x
            if c>m: l=mid+1
            else: r=mid
        return l
