class Solution:
    def shortestWordDistance(self, words, word1, word2):
        i = j = -1
        res = float("inf")
        for k, w in enumerate(words):
            if w == word1:
                i = k
            if w == word2:
                j = k
            if i != -1 and j != -1 and (word1 != word2 or i != j):
                res = min(res, abs(i - j))
        return res
