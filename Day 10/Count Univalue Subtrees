class Solution:
    def countUnivalSubtrees(self, root):
        self.c = 0
        def dfs(node):
            if not node:
                return True
            l = dfs(node.left)
            r = dfs(node.right)
            if l and r and (not node.left or node.left.val == node.val) and (not node.right or node.right.val == node.val):
                self.c += 1
                return True
            return False
        dfs(root)
        return self.c
