class Solution:
    def characterReplacement(self, s, k):
        from collections import defaultdict
        c=defaultdict(int)
        l=0; r=0; m=0; res=0
        while r<len(s):
            c[s[r]]+=1
            m=max(m,c[s[r]])
            while r-l+1-m>k:
                c[s[l]]-=1; l+=1
            res=max(res,r-l+1)
            r+=1
        return res
